{
  "manifest_version": 2,
  "name": "__MSG_name__",
  "short_name": "TOtL",
  "version": "3.4.17.0",
  "description": "__MSG_description__",
  "author": "Stefan vd",
  "homepage_url": "https://www.turnoffthelights.com/support/",
  "icons": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "96": "icons/icon96.png",
      "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
      "default_title": "__MSG_pageatitle__",
      "default_icon": {
        "16": "icons/iconstick16.png",
        "19": "icons/iconstick19.png",
        "20": "icons/iconstick20.png",
        "32": "icons/iconstick32.png",
        "38": "icons/iconstick38.png",
        "40": "icons/iconstick40.png",
        "64": "icons/iconstick64.png"
      }
  },
  "background": {
    "page": "background.html",
	  "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://platform.twitter.com https://apis.google.com; img-src *; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_matches": ["*://*.chromeactions.com/*"],
      "css" : ["css/light.css"],
      "js": ["js/content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/screenshader.js"],
      "run_at": "document_start"
    },    
    {
      "matches": ["*://*.youtube.com/*"],
      "js": [ "js/fps.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://*.youtube.com/*"], 
      "css" : ["css/youtube.css"]
    }
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "MacCtrl+Shift+L"
      }
    },
    "toggle-feature-nightmode": {
            "suggested_key": {
              "default": "Ctrl+Shift+N",
              "mac": "MacCtrl+Shift+N"
            },
            "description": "__MSG_titelnighttheme__"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "offline_enabled": true,
  "minimum_chrome_version": "33",
  "permissions": [ "contextMenus", "notifications", "tabs", "storage", "<all_urls>" ]
}